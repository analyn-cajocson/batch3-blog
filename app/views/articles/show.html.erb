
<p>
    <%= @article.name %>
</p>

<p>
    <%= @article.body %>
</p>


<h3>Comments</h3>

<table>
    <thead>
      <tr>
        <th>ID</th>
        <th>Body</th>
      </tr>
  
    </thead>
  
    <tbody>
      <% @comments.each do |comment| %>
        <tr>
          <td><%= comment.id %> </td>
          <td><%= comment.body %> </td>
        <tr>
      <% end %>
    </tbody>
  </table>

<p>
    <%= link_to 'Add Comment',  new_article_comment_path(@article) %>
</p>

